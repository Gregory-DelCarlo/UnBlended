<!DOCTYPE html>
<html>
  <head>
    <title>UnBlended</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    
  <% if logged_in? %>
  <script type="text/javascript">
      window.currentUser = <%= render(
          "api/users/user.json.jbuilder", 
          user: current_user
      ).html_safe  %>
  </script>
  <% end %>

  <script type='text/javascript'>
    window.mastheadImg = "<%= image_url('header/masthead-img-main.png')%>";
    window.logo = "<%= image_url('header/logo-standin.svg')%>"
  </script>

  <script src="https://kit.fontawesome.com/62b97cf2d6.js" crossorigin="anonymous"></script>

  </head>

  <body>
    <%= yield %>
  </body>
</html>
